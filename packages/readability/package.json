    "seo-readability",
    "content-scoring",
    "zero-dependency",
    "ci-readability",
    "cms-readability",
    "readability-api",
    "typescript",
    "multi-algorithm"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
